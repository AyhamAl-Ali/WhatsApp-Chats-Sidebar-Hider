{
  "manifest_version": 3,
  "name": "WhatsApp Chats Hider",
  "version": "1.0",
  "description": "Toggle visibility of a WhatsApp Web Chats Sidebar.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "host_permissions": ["https://web.whatsapp.com/"],
  "action": {
    "default_title": "WhatsApp Chats Hider"
  }
}
